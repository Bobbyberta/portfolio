      - generateStories
      - createStoryTemplate
      - generateStoriesForComponent
      - toPascalCase
rules:
  - name: css-class-naming
    description: Follow BEM-like naming convention for CSS classes
    pattern: '[a-z]+((-|__)[a-z]+)*'
    examples:
      - content-card
      - content-card__image
      - content-card--featured
      - blog-post-content
  - name: file-organization
    description: Maintain separation of concerns between components, layouts, and utilities
    locations:
      - src/styles/components/
      - src/styles/layouts/
      - src/styles/utils/
  - name: blog-post-creation
    description: Use blog-post-template.html as base for new blog posts
    process:
      - Copy src/pages/blog/blog-post-template.html
      - Update metadata and content
      - Add to src/pages/blog.html
      - Update vite.config.js rollupOptions.input
  - name: storybook-organization
    description: Maintain consistent story file structure and naming
    locations:
      - src/stories/
      - .storybook/
  - name: build-process
    description: Files are processed through Vite and output to dist directory
    locations:
      - dist/
      - src/
  - name: accessibility
    description: Ensure proper accessibility attributes and semantic HTML
    requirements:
      - Include alt text for all images
      - Use aria-labels for interactive elements
      - Maintain proper heading hierarchy
      - Use semantic HTML elements
dependencies:
  - vite
  - serve
  - storybook
  - '@storybook/html'
  - '@storybook/html-vite'
  - '@storybook/addon-essentials'
  - '@storybook/addon-interactions'
  - '@storybook/addon-links'
  - '@storybook/test'
  - '@storybook/blocks'
output:
  directory: dist
  assets:
    - images
    - styles
    - js
    - favicon
deployment:
  platform: github-pages
  branch: gh-pages
  workflow: .github/workflows/pages.yml
